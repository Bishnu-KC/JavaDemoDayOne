package com.company.controlflow;

public class IfElseDemo {
	public static void main (String args[])
	{
		/*
		 * 1. if statement
		 * 2. nested if statement
		 * 3. if-else statement
		 * 4. if else-if statement
		 */
		// 1. if statement
		/*
		 * if(condition)
		 * {
		 * statements;
		 * }
		 */
		int a= 10;
		if(a>5)
		{
			System.out.println(a);
		}
		System.out.println("Thankyou, Try next time");
		
		//Nested if statement
		/*
		 * if(condition)
		 * {
		 * 	Statement;
		 * 	if(condition)
		 * 		{
		 * 			Statement;
		 * 		}
		 * }
		 */
		int b=57;
		if(b<80)
		{
			System.out.println("b is lesser value: "+b);
			if(b>45)
			{
				System.out.println("b is greater value; "+b);
			}
		}
	}

}
